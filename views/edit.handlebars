<div class="container">
  <br>
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">

    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱：</label>
      <input type="text" class="form-control form-control-sm" name="name" value="{{restaurant.name}}">
    </div>

    <div class="mb-3">
      <label for="exampleDataList" class="form-label">餐廳類型：</label>
      <input class="form-control form-control-sm" list="datalistOptions" placeholder="category" name="category"
        value="{{restaurant.category}}">
      <datalist id="datalistOptions">
        <option value="美式">
        <option value="義式">
        <option value="咖啡">
        <option value="中東料理">
        <option value="酒吧">
      </datalist>
    </div>

    <div class="mb-3">
      <label for="name">圖片：</label>
      <input type="text" class="form-control form-control-sm" placeholder="URL" name="image"
        value="{{restaurant.image}}">
    </div>

    <div class="mb-3">
      <label for="name">地點：</label>
      <input type="text" class="form-control form-control-sm" placeholder="location" name="location"
        value="{{restaurant.location}}">
    </div>

    <div class="mb-3">
      <label for="name">電話：</label>
      <input type="text" class="form-control form-control-sm" placeholder="phone" name="phone"
        value="{{restaurant.phone}}">
    </div>


    <div class="mb-3">
      <label for="name">餐廳評分：</label>
      <input type="text" class="form-control form-control-sm" placeholder="rating" name="rating"
        value="{{restaurant.rating}}">
    </div>

    <div class="mb-3">
      <label for="name">更多介紹：</label>
      <input class="form-control" placeholder="Leave a comment here" name="description" value="{{restaurant.description}}"></input>
    </div>
  
    <button type="submit" class="btn btn-primary">save</button>
  </form>

</div>